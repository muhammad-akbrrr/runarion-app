FROM python:3.12-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Install system dependencies
RUN apt-get update && apt-get install -y \
  libpq-dev \
  gcc \
  dos2unix \
  curl \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Create non-root user
RUN useradd -m appuser

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy project files
COPY . .

# Copy and set up development entrypoint script with proper line endings
COPY docker-entrypoint-dev.sh /tmp/
RUN tr -d '\r' < /tmp/docker-entrypoint-dev.sh > /app/docker-entrypoint-dev.sh && \
    chmod +x /app/docker-entrypoint-dev.sh && \
    rm /tmp/docker-entrypoint-dev.sh

# Change ownership
RUN chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Expose port 5000
EXPOSE 5000

# Run the application
CMD ["/bin/bash", "/app/docker-entrypoint-dev.sh"]