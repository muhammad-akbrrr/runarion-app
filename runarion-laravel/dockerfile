FROM php:8.3-fpm

# Install dependencies
RUN apt-get update && apt-get install -y \
  git \
  curl \
  libonig-dev \
  libxml2-dev \
  libpq-dev \
  zip \
  unzip \
  libssl-dev \
  libfreetype6-dev \
  libjpeg62-turbo-dev \
  libpng-dev \
  libwebp-dev \
  libzip-dev \
  libicu-dev \
  libgmp-dev

# Install Node.js and npm using nvm (more reliable across platforms)
ENV NVM_DIR /usr/local/nvm
ENV NODE_VERSION 20.11.1
ENV NODE_PATH $NVM_DIR/v$NODE_VERSION/lib/node_modules
ENV PATH $NVM_DIR/versions/node/v$NODE_VERSION/bin:$PATH

RUN mkdir -p $NVM_DIR && \
    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash && \
    . $NVM_DIR/nvm.sh && \
    nvm install $NODE_VERSION && \
    nvm alias default $NODE_VERSION && \
    nvm use default

# Clear cache
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Configure and install PHP extensions
RUN docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp \
  && docker-php-ext-install -j$(nproc) \
  pdo_pgsql \
  mbstring \
  exif \
  pcntl \
  bcmath \
  gd \
  zip \
  intl \
  gmp

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www/html

# Copy project files
COPY . .

# Copy and set up development entrypoint script
COPY docker-entrypoint-dev.sh /var/www/html/
RUN chmod +x /var/www/html/docker-entrypoint-dev.sh

# Install dependencies with increased verbosity for debugging
RUN composer install --optimize-autoloader --verbose

# Install Node.js dependencies with increased verbosity and legacy peer deps
# Add specific configurations for Windows compatibility
ENV CHOKIDAR_USEPOLLING=true
ENV WATCHPACK_POLLING=true
RUN npm install --verbose --legacy-peer-deps

# Set proper permissions (modified for Windows compatibility)
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache && \
    chmod -R 775 /var/www/html/storage /var/www/html/bootstrap/cache

# Expose port 8000
EXPOSE 8000

# Run entrypoint script
CMD ["/bin/bash", "/var/www/html/docker-entrypoint-dev.sh"]