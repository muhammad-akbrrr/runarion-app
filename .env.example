# Docker Registry and Tag Configuration
REGISTRY=localhost
TAG=latest

# Database Configuration
DB_CONNECTION=pgsql
DB_PORT=5432
DB_DATABASE=runarion
DB_USER=postgres
DB_PASSWORD=
DB_HOST=postgres-db

# API Keys
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Application URLs
APP_URL=http://localhost:8000
PYTHON_SERVICE_URL=http://localhost:5000

# Docker Swarm Configuration
DOCKER_STACK_NAME=runarion-app

# Resource Limits
LARAVEL_MEMORY_LIMIT=2048M
LARAVEL_MEMORY_RESERVATION=1024M
PYTHON_MEMORY_LIMIT=1024M
PYTHON_MEMORY_RESERVATION=512M

# Logging Configuration
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Development Settings
VITE_PORT=5173
VITE_HOST=0.0.0.0
VITE_APP_NAME=Runarion
VITE_PYTHON_SERVICE_URL=http://localhost:5000
VITE_SERVICE_URL=http://localhost:5173

# PHP Development Settings
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12