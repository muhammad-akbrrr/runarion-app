# Model Paths
SD_MODEL_PATH=/app/models/stable-diffusion-v1-5
CONTROLNET_MODEL_PATH=/app/models/controlnet

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST=8.0  # Adjust based on your GPU architecture
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Model Performance Settings
SD_MODEL_PRECISION=fp16
CONTROLNET_PRECISION=fp16
MAX_BATCH_SIZE=4
MAX_IMAGE_SIZE=1024

# Cache Configuration
MODEL_CACHE_DIR=/app/cache
IMAGE_CACHE_DIR=/app/outputs/cache

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
SD_API_HOST=0.0.0.0
SD_API_WORKERS=1

# Security Configuration
SD_ALLOWED_ORIGINS=http://laravel-app:8000,http://python-app:5000
